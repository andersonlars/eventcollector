<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :event_id %>
    <%= f.input :event_desc %>
    <%= f.input :event_date %>
    <%= f.input :event_category %>
    <%= f.association :user %>
    <%= f.input :event_time %>
    <%= f.input :authentication_key %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
