<%= form_for @event, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :event_id, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :event_id, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :event_desc, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :event_desc, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :event_date, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.datetime_select :event_date, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :event_category, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :event_category, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :event_time, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.time_select :event_time, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :authentication_key, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :authentication_key, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  events_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
